<% include ../partials/header %>

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= watch.model %> </h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form action="" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="watch[brand]" value="<%= watch.brand %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="watch[image]" value="<%= watch.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="watch[description]" value="<%= watch.description %>>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
        
      </form>
      <a href="/galleries/<%= galleryID %>/watches/<%= watchID %>">Go Back</a>
    </div>
  </div>


<% include ../partials/footer %>
